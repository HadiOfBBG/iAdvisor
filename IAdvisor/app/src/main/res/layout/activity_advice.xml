<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="股市"
                android:textSize="30dp"
                android:id="@+id/textView5" />
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="外匯"
                android:textSize="30dp"
                android:layout_below="@+id/listview"
                android:id="@+id/textView6" />

            <ListView
                android:id="@+id/listview2"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6">
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="共同基金"
                android:textSize="30dp"
                android:layout_below="@+id/listview2"
                android:id="@+id/textView7" />

            <ListView
                android:id="@+id/listview3"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7">
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="商品期貨"
                android:textSize="30dp"
                android:layout_below="@+id/listview3"
                android:id="@+id/textView8" />

            <ListView
                android:id="@+id/listview4"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8">
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="金融期貨"
                android:textSize="30dp"
                android:layout_below="@+id/listview4"
                android:id="@+id/textView9" />

            <ListView
                android:id="@+id/listview5"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9">
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="債券"
                android:textSize="30dp"
                android:layout_below="@+id/listview5"
                android:id="@+id/textView10" />

            <ListView
                android:id="@+id/listview6"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10">
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="選擇權"
                android:textSize="30dp"
                android:layout_below="@+id/listview6"
                android:id="@+id/textView11" />

            <ListView
                android:id="@+id/listview7"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/textView11">
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ETF"
                android:textSize="30dp"
                android:layout_below="@+id/listview7"
                android:id="@+id/textView12" />

            <ListView
                android:id="@+id/listview8"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_alignParentStart="true"
                android:paddingRight="20dp"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12">
            </ListView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
