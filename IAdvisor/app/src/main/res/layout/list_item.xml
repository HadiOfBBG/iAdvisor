<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:descendantFocusability="blocksDescendants">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is row number 15"
        android:id="@+id/list_item_text"
        android:gravity="center_vertical"
        android:textSize="27dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_alert"
        android:src="@drawable/ic_add_alert_white_24dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/list_item_favorite"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_favorite"
        android:src="@drawable/ic_action_favorite"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:layout_alignBottom="@+id/list_item_text"
        android:layout_toStartOf="@+id/list_item_alert" />

</RelativeLayout>